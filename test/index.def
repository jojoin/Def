; 模板类，容器 Vector
tpl(Base_T T) type Vector(
	refer array 0 T vptr
	Int max_length ; 空间大小
	Int length ; 当前大小
	; 构造
	fun Vector()(
		set vptr new array 7 T ; 首次分配空间
	)
	; 长度
	fun Int size(T v)(
		length
	)
	; 末尾添加元素
	fun push(T v)(
		if eq length max_length (
			set max_length mul max_length 2 ; 空间大小倍增
			var newvptr new array max_length T ; 分配新空间
			var i length
			while i ( ; 拷贝所有元素
				arrset newvptr i arrget vptr i 
				set i sub i 1
			)
			delete vptr ; 释放旧空间
			set vptr newvptr
		)
		arrset vptr length v
		set length add length 1
	)
	; 末尾弹出元素
	fun pop()(
		if length
			set length sub length 1
	)
	; 访问末尾元素
	fun last()(
		var idx length
		if idx 
			set idx sub idx 1
		arrget vptr idx
	)
	; 下标访问
	fun T at(Int idx)(
		if has_next (
			ret elmivk next last
		) else (
			ret value ; 自己就是最后一个
		)
	)
)

